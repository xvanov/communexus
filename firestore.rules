rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - authenticated users can read all users (for contacts)
    // but can only write to their own document
    match /users/{userId} {
      allow read: if request.auth != null; // Anyone authenticated can read user profiles
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Users cannot delete their own documents (for data retention)
      
      // Contacts subcollection - users can manage their own contacts
      match /contacts/{contactId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Notification preferences - users can only access their own
    match /notificationPreferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Threads - users can only access threads they're participants in
    match /threads/{threadId} {
      // Allow authenticated users to create threads
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participants;
      
      // Allow read/update/delete only for participants
      allow read, update, delete: if request.auth != null && 
        (request.auth.uid in resource.data.participants || 
         request.auth.token.email in resource.data.participants);
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow authenticated users to create messages in threads they participate in
        allow create: if request.auth != null &&
          (request.auth.uid in get(/databases/$(database)/documents/threads/$(threadId)).data.participants ||
           request.auth.token.email in get(/databases/$(database)/documents/threads/$(threadId)).data.participants);
        
        // Allow read/update/delete only for thread participants
        allow read, update, delete: if request.auth != null &&
          (request.auth.uid in get(/databases/$(database)/documents/threads/$(threadId)).data.participants ||
           request.auth.token.email in get(/databases/$(database)/documents/threads/$(threadId)).data.participants);
      }
    }
    
    // Collection group query for messages (needed for Smart Search)
    // This allows querying all messages across all threads for authenticated users
    match /{path=**}/messages/{messageId} {
      allow read: if request.auth != null;
    }
    
    // AI Features - users can only access their own AI data
    match /aiFeatures/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Notifications - users can only access their own notifications
    match /notifications/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Action Items - users can access action items for threads they participate in
    match /actionItems/{actionItemId} {
      // Allow read: For list queries, check thread participation per document
      // For non-existent documents, allow read (for existence checks via getDoc)
      allow read: if request.auth != null && (
        // Allow read if document doesn't exist (for single document existence checks)
        !exists(/databases/$(database)/documents/actionItems/$(actionItemId)) ||
        // For existing documents in queries, verify user is participant in thread
        // Note: resource.data is guaranteed to exist for existing documents
        (resource != null &&
         resource.data != null &&
         resource.data.threadId != null &&
         exists(/databases/$(database)/documents/threads/$(resource.data.threadId)) &&
         request.auth.uid in get(/databases/$(database)/documents/threads/$(resource.data.threadId)).data.participants)
      );
      
      // Allow create if user is a participant in the thread
      allow create: if request.auth != null && 
        exists(/databases/$(database)/documents/threads/$(request.resource.data.threadId)) &&
        request.auth.uid in get(/databases/$(database)/documents/threads/$(request.resource.data.threadId)).data.participants;
      
      // Allow update/delete if user is a participant in the thread
      allow update, delete: if request.auth != null && 
        exists(/databases/$(database)/documents/threads/$(resource.data.threadId)) &&
        request.auth.uid in get(/databases/$(database)/documents/threads/$(resource.data.threadId)).data.participants;
    }
    
    // Checklists - users can access checklists for threads they participate in
    match /checklists/{checklistId} {
      // Allow read: For list queries, check thread participation per document
      // For non-existent documents, allow read (for existence checks via getDoc)
      allow read: if request.auth != null && (
        // Allow read if document doesn't exist (for single document existence checks)
        !exists(/databases/$(database)/documents/checklists/$(checklistId)) ||
        // For existing documents in queries, verify user is participant in thread
        // Note: resource.data is guaranteed to exist for existing documents
        (resource != null &&
         resource.data != null &&
         resource.data.threadId != null &&
         exists(/databases/$(database)/documents/threads/$(resource.data.threadId)) &&
         request.auth.uid in get(/databases/$(database)/documents/threads/$(resource.data.threadId)).data.participants)
      );
      
      // Allow create if user is a participant in the thread
      allow create: if request.auth != null && 
        exists(/databases/$(database)/documents/threads/$(request.resource.data.threadId)) &&
        request.auth.uid in get(/databases/$(database)/documents/threads/$(request.resource.data.threadId)).data.participants;
      
      // Allow update/delete if user is a participant in the thread
      allow update, delete: if request.auth != null && 
        exists(/databases/$(database)/documents/threads/$(resource.data.threadId)) &&
        request.auth.uid in get(/databases/$(database)/documents/threads/$(resource.data.threadId)).data.participants;
    }
    
    // Identity Links - users can read their own identity links, admins can read/write all
    match /identityLinks/{identityLinkId} {
      // Helper function to check if user is admin
      // Note: This assumes admin role is stored in the user document or token claim
      function isAdmin() {
        return request.auth != null && 
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
      
      // Helper function to validate external identity format
      // Note: Firestore rules have limited regex support, so we do basic validation
      // Full format validation (E.164, email regex) is done in the service layer
      function isValidExternalIdentity(identity) {
        return identity.keys().hasAll(['type', 'value', 'verified']) &&
               identity.type is string &&
               identity.type in ['phone', 'email', 'facebook_id', 'whatsapp_id'] &&
               identity.value is string &&
               identity.value.size() > 0 &&
               identity.verified is bool &&
               // Basic format checks (limited regex support in Firestore rules)
               // Phone: Must start with +
               (identity.type != 'phone' || identity.value.matches('^\\+.*')) &&
               // Email: Must contain @
               (identity.type != 'email' || identity.value.matches('.*@.*')) &&
               // Facebook/WhatsApp ID: Non-empty string
               (identity.type == 'phone' || identity.type == 'email' || 
                (identity.type == 'facebook_id' || identity.type == 'whatsapp_id'));
      }
      
      // Allow read: Users can read their own identity links, admins can read all
      allow read: if request.auth != null && (
        // Allow if user is admin
        isAdmin() ||
        // Allow if user is reading their own identity link
        (resource != null &&
         resource.data != null &&
         resource.data.userId == request.auth.uid)
      );
      
      // Allow create: Users can create their own identity links, admins can create any
      allow create: if request.auth != null && (
        // Allow if user is admin
        isAdmin() ||
        // Allow if user is creating their own identity link
        (request.resource.data.userId == request.auth.uid &&
         // Basic validation - externalIdentities must be a list
         request.resource.data.externalIdentities is list &&
         request.resource.data.externalIdentities.size() > 0 &&
         // Validate required fields
         request.resource.data.userId is string &&
         request.resource.data.organizationId is string)
         // Note: Full format validation (E.164, email regex) is done in the service layer
         // Firestore rules don't support iterating over array items with lambdas
      );
      
      // Allow update: Users can update their own identity links, admins can update any
      allow update: if request.auth != null && (
        // Allow if user is admin
        isAdmin() ||
        // Allow if user is updating their own identity link
        (resource.data.userId == request.auth.uid &&
         // Ensure userId doesn't change
         request.resource.data.userId == resource.data.userId &&
         request.resource.data.organizationId == resource.data.organizationId &&
         // Basic validation - externalIdentities must be a list
         request.resource.data.externalIdentities is list)
         // Note: Full format validation (E.164, email regex) is done in the service layer
         // Firestore rules don't support iterating over array items with lambdas
      );
      
      // Allow delete: Users can delete their own identity links, admins can delete any
      allow delete: if request.auth != null && (
        // Allow if user is admin
        isAdmin() ||
        // Allow if user is deleting their own identity link
        (resource.data.userId == request.auth.uid)
      );
    }
    
    // Incoming Messages - Cloud Functions can write, authenticated users can read their own
    match /incomingMessages/{messageId} {
      // Allow read: Users can read messages for their organization
      // Note: This assumes organizationId is stored in the message
      allow read: if request.auth != null;
      
      // Allow write: Only Cloud Functions (server-side) can write
      // Client-side writes are not allowed for security
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Pending Routing - Cloud Functions can write, authenticated users can read
    match /pending_routing/{pendingMessageId} {
      // Allow read: Users can read pending messages for manual assignment
      allow read: if request.auth != null;
      
      // Allow create: Only Cloud Functions (server-side) can create
      allow create: if false; // Only Cloud Functions can create
      
      // Allow update: Authenticated users can assign pending messages
      allow update: if request.auth != null &&
        // Allow assignment of pending messages
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['assignedThreadId', 'assignedAt', 'assignedBy']) ||
         // Allow status updates
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']));
      
      // Allow delete: Users can delete assigned messages
      allow delete: if request.auth != null;
    }
    
    // Routing Logs - Cloud Functions can write, authenticated users can read
    match /routing_logs/{logId} {
      // Allow read: Users can read routing logs for their organization
      allow read: if request.auth != null;
      
      // Allow write: Only Cloud Functions (server-side) can write
      allow write: if false; // Only Cloud Functions can write
    }
  }
}
