{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "lib": ["es2017"]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "../node_modules", "../src"]
}
