rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Thread media files
    match /threads/{threadId}/media/{fileName} {
      allow read, write: if request.auth != null && 
        request.auth.uid in firestore.get(/databases/(default)/documents/threads/$(threadId)).data.participants;
    }
    
    // Message attachments
    match /threads/{threadId}/messages/{messageId}/{fileName} {
      allow read, write: if request.auth != null && 
        request.auth.uid in firestore.get(/databases/(default)/documents/threads/$(threadId)).data.participants;
    }
    
    // AI generated content
    match /ai/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
